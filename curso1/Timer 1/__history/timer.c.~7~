#include <16F628A.h>
#fuses XT, MCLR, NOWDT
#use delay(clock = 4MHZ)


enable_interrupts(GLOBAL); // chave geral de interrupções.
enable_interrupts(INT_TIMER0);

setup_timer_0(T0_INTERNAL || T0_DIV_1); // t0_internal é a fonte do clock ... prescaler 1 nao tem...


int main() {
      
      while(true) {
      output_toggle(PIN_B0);
      delay_ms(1000);
      output_toggle(PIN_B2);
      delay_ms(1000);
      
      output_toggle(PIN_B4);
      delay_ms(1000);
      
      output_toggle(PIN_B6);
      delay_ms(1000);
      
      
      
      }

}
