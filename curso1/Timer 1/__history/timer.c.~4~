#include <16F628A.h>
#fuses XT, MCLR, NOWDT
#use delay(clock = 4MHZ)



int main() {
      
      while(true) {
      output_toggle(PIN_B0);
      delay_ms(1000);
      output_toggle(PIN_B2);
      delay_ms(1000);
      
      output_toggle(PIN_B4);
      delay_ms(1000);
      
      output_toggle(PIN_B6);
      delay_ms(1000);
      
      output_toggle(PIN_B8);
      delay_ms(1000);
      
      }

}
